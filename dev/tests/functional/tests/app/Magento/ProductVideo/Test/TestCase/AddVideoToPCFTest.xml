            <data name="video/video_url" xsi:type="string">https://vimeo.com/21776334</data>
            <data name="video/video_title" xsi:type="string">Foo Test 2</data>
            <data name="video/video_description" xsi:type="string">This is a test "Foo Test 2"</data>
            <constraint name="Magento\ProductVideo\Test\Constraint\AssertVideoCategoryView" />
            <constraint name="Magento\ProductVideo\Test\Constraint\AssertVideoProductView" />
        </variation>
        <variation name="AddVideoToPCFTestVariation3">
            <data name="description" xsi:type="string">Add youtube video only required fields filled in</data>
            <data name="product/dataset" xsi:type="string">product_for_video</data>
            <data name="video/video_url" xsi:type="string">https://youtu.be/WMp2PvU2qi8</data>
            <data name="video/video_title" xsi:type="string">Foo Test 1</data>
            <data name="video/video_description" xsi:type="string"></data>
            <constraint name="Magento\ProductVideo\Test\Constraint\AssertVideoCategoryView" />
            <constraint name="Magento\ProductVideo\Test\Constraint\AssertVideoProductView" />
        </variation>
        <variation name="AddVideoToPCFTestVariation4">
            <data name="description" xsi:type="string">Add vimeo video only required fields filled in</data>
