<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/etc/variations.xsd">
    <testCase name="Magento\SalesRule\Test\TestCase\ApplySeveralSalesRuleEntityTest" summary="Apply Several Sales Rules" ticketId="MAGETWO-45883">
        <variation name="ApplySeveralSalesRuleEntityTestVariation1">
            <data name="description" xsi:type="string">Rules with same priority, both are applied</data>
            <data name="salesRulesOriginal/rule1" xsi:type="string">active_sales_rule_product_subselection</data>
            <data name="salesRulesOriginal/rule2" xsi:type="string">active_sales_rule_product_attribute</data>
            <data name="cartPrice/sub_total" xsi:type="string">200.00</data>
            <data name="cartPrice/grand_total" xsi:type="string">204.00</data>
            <data name="cartPrice/discount" xsi:type="string">11.00</data>
            <data name="productQuantity/productForSalesRule1" xsi:type="string">1</data>
            <data name="productQuantity/productForSalesRule2" xsi:type="string">2</data>
            <constraint name="Magento\SalesRule\Test\Constraint\AssertCartPriceRuleConditionIsApplied" />
        </variation>
        <variation name="ApplySeveralSalesRuleEntityTestVariation2">
            <data name="description" xsi:type="string">Rules with same priority, higher discount rule is applied</data>
            <data name="salesRulesOriginal/rule1" xsi:type="string">active_sales_rule_for_all_groups_no_coupon</data>
            <data name="salesRulesOriginal/rule2" xsi:type="string">active_sales_rule_row_total</data>
            <data name="cartPrice/sub_total" xsi:type="string">100.00</data>
            <data name="cartPrice/grand_total" xsi:type="string">55.00</data>
            <data name="cartPrice/discount" xsi:type="string">50.00</data>
            <data name="productQuantity/productForSalesRule1" xsi:type="string">1</data>
            <constraint name="Magento\SalesRule\Test\Constraint\AssertCartPriceRuleConditionIsApplied" />
        </variation>
        <variation name="ApplySeveralSalesRuleEntityTestVariation3">
            <data name="description" xsi:type="string">Rules with different priority, both are applied</data>
            <data name="salesRulesOriginal/rule1" xsi:type="string">active_sales_rule_product_attribute</data>
            <data name="salesRulesOriginal/rule2" xsi:type="string">active_sales_total_items</data>
            <data name="cartPrice/sub_total" xsi:type="string">250.00</data>
            <data name="cartPrice/grand_total" xsi:type="string">193.50</data>
            <data name="cartPrice/discount" xsi:type="string">71.50</data>
            <data name="productQuantity/productForSalesRule1" xsi:type="string">2</data>
            <data name="productQuantity/productForSalesRule2" xsi:type="string">1</data>
            <constraint name="Magento\SalesRule\Test\Constraint\AssertCartPriceRuleConditionIsApplied" />
        </variation>
        <variation name="ApplySeveralSalesRuleEntityTestVariation4">
            <data name="description" xsi:type="string">Rules with different priority, none are applied</data>
            <data name="salesRulesOriginal/rule1" xsi:type="string">active_sales_rule_row_total</data>
            <data name="salesRulesOriginal/rule2" xsi:type="string">active_sales_total_items</data>
            <data name="productQuantity/productForSalesRule2" xsi:type="string">1</data>
          <constraint name="Magento\SalesRule\Test\Constraint\AssertCartPriceRuleConditionIsNotApplied" />
        </variation>
    </testCase>
</config>
