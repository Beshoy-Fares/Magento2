<sections>
    <general_information>
        <class>\Magento\Backend\Test\Block\Widget\Section</class>
        <selector>div[class=fieldset-wrapper]</selector>
        <strategy>css selector</strategy>
        <wrapper>general</wrapper>
        <fields>
            <is_active>
                <input>switcher</input>
                <selector>input[name='general[is_active]']</selector>
            </is_active>
            <description />
            <include_in_menu>
                <input>switcher</input>
                <selector>input[name='general[include_in_menu]']</selector>
            </include_in_menu>
        </fields>
    </general_information>
    <display_setting>
        <class>\Magento\Backend\Test\Block\Widget\Section</class>
        <selector>div[class=fieldset-wrapper]</selector>
        <strategy>css selector</strategy>
        <wrapper>general</wrapper>
        <fields>
            <is_anchor>
                <input>switcher</input>
                <selector>//div[@class='switcher'][./input[@name='general[is_anchor]']]</selector>
                <strategy>xpath</strategy>
            </is_anchor>
            <available_product_listing_config>
                <selector>input[name='general[use_config][available_sort_by]']</selector>
                <input>checkbox</input>
            </available_product_listing_config>
            <available_sort_by>
                <selector>select[name='general[available_sort_by]']</selector>
                <input>multiselect</input>
            </available_sort_by>
            <default_product_listing_config>
                <selector>input[name='general[use_config][default_sort_by]']</selector>
                <input>checkbox</input>
            </default_product_listing_config>
            <default_sort_by>
                <input>select[name='general[default_sort_by]']</input>
            </default_sort_by>
            <display_mode>
                <input>select</input>
            </display_mode>
        </fields>
    </display_setting>
    <category_products>
        <class>\Magento\Catalog\Test\Block\Adminhtml\Category\Edit\Section\Product</class>
        <selector>#catalog_category_products</selector>
        <strategy>css selector</strategy>
    </category_products>
    <custom_design>
        <class>\Magento\Backend\Test\Block\Widget\Section</class>
        <selector>div[class=fieldset-wrapper]</selector>
        <strategy>css selector</strategy>
        <wrapper>general</wrapper>
    </custom_design>
</sections>
