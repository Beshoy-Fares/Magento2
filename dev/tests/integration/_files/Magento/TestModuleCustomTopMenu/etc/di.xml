<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Magento\Theme\Model\Menu\MenuNode\Contact" type="Magento\Theme\Model\Menu\MenuNode">
        <arguments>
            <argument name="id" xsi:type="string">top-menu-additional-link</argument>
            <argument name="name" xsi:type="string">Additional Link</argument>
            <argument name="url" xsi:type="string">/top-menu-additional-link</argument>
        </arguments>
    </virtualType>
        <virtualType name="Magento\Theme\Model\Menu\GetAdditionalMenu" type="Magento\Theme\Model\Menu\GetPredefinedMenu">
        <arguments>
            <argument name="menuNodes" xsi:type="array">
                <item name="contact" xsi:type="object">Magento\Theme\Model\Menu\MenuNode\Contact</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Theme\Model\Menu\GetCompoundMenu">
        <arguments>
            <argument name="menuProviders" xsi:type="array">
                <item name="additional" xsi:type="object">Magento\Theme\Model\Menu\GetAdditionalMenu</item>
            </argument>
        </arguments>
    </type>
</config>
