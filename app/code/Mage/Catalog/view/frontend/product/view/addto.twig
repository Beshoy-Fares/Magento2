{% set continueUrl = encodeUrl(getCurrentUrl()) %}
{% set compareAddUrlParams = {'product': product.entityId, 'uenc': continueUrl } %}
{% set compareAddUrl = getUrl('catalog/product_compare/add', compareAddUrlParams) %}
{% set wishListAddUrl = getUrl('wishlist/index/add', {'product': product.entityId}) %}

<ul class="add-to-links">
    {% if isModuleOutputEnabled('Mage_Wishlist') and getStoreConfig('wishlist/general/active') %}
        <li><a href="{{wishListAddUrl}}" class="link-wishlist">{{ 'Add to Wishlist'|translate}}</a></li>
    {% endif %}
    {% if compareAddUrl %}
        <li><span class="separator">|</span> <a href="{{compareAddUrl}}" class="link-compare">{{'Add to Compare'|translate}}</a></li>
    {% endif %}
</ul>