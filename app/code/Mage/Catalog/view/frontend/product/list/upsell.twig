{% if block.itemCollection.items is not empty %}
    <div class="box-collateral box-up-sell">
    <h2>{{ 'You may also be interested in the following product(s)'|translate }}</h2>
    <table class="products-grid" id="upsell-product-table">
    {# block.setColumnCount(5); # uncomment this line if you want to have another number of columns. also can be changed in layout #}
    {{ block.resetItemsIterator() }}
    {% set rowCount = block.rowCount %}
    {% for i in 0..rowCount %}
        <tr>
            {% set columnCount = block.columnCount%}
            {% for j in 0..columnCount %}
                {% set link = block.getIterableItem() %}
                {% if link is not empty %}
                    <td>
                        <a href="{{ link.productUrl }}" title="{{ block.escapeHtml(link.name) }}" class="product-image"><img src="{{ block.smallImageUrl(link) }}" width="{{ block.smallImageSize }}" height="{{ block.smallImageSize }}" alt="{{ block.escapeHtml(link.name) }}" /></a>
                        <h3 class="product-name"><a href="{{ link.productUrl }}" title="{{ block.escapeHtml(link.name) }}">{{ block.escapeHtml(link.name) }}</a></h3>
                        {{ block.priceHtml(link, true, '-upsell') |raw }}
                        {{ block.reviewsSummaryHtml(link) }}
                    </td>
                {% else %}
                    <td class="empty">&nbsp;</td>
                {% endif %}
            {% endfor %}
        </tr>
    {% endfor %}
    </table>
    <script type="text/javascript">(function($) {$('#upsell-product-table').decorate('table')})(jQuery)</script>
    </div>
{% endif %}