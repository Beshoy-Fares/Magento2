<div class="fade" id="store-view-window">
    <div class="popup">
        <header class="popup-header">
            <strong class="popup-title"><?php echo $this->__('Select Storeviews to make your changes live:') ?></strong>
        </header>
        <div class="popup-content">
            <form method="post" action="">
                <ul class="websites">
