{% if review.reviewsCount %}
    <div class="ratings">
        {% if review.ratingSummary %}
            <div class="rating-box">
                <div class="rating" style="width:{{ review.ratingSummary }}%"></div>
            </div>
        {% endif %}
        <p class="rating-links">
            <a href="{{ review.reviewsUrl }}">{{ '%d Review(s)' | format(review.reviewsCount) | translate }}</a>
            <span class="separator">|</span>
            <a href="{{ review.reviewsUrl }}#review-form">{{ 'Add Your Review' | translate }}</a>
        </p>
    </div>
{% else %}
    <p class="no-rating"><a href="{{ review.reviewsUrl }}#review-form">{{ 'Be the first to review this product'|translate }}</a></p>
{% endif %}
