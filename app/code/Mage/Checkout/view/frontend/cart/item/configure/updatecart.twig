{% if product.isSalable %}
    <div class="add-to-cart">
        {% if product.isGrouped == false %}
        <label for="qty">{{ 'Qty:'|translate }}</label>
        <input type="text" name="qty" id="qty" maxlength="12" value="{{ product.defaultQuantity * 1 }}" title="{{ 'Qty:'|translate }}" class="input-text qty" data-validate="{required:true,digits:true}"/>
        {% endif %}
        <button type="button" title="{{ 'Update Cart'|translate }}" class="button btn-cart" id="product-updatecart-button"><span><span>{{ 'Update Cart'|translate }}</span></span></button>
        {{ getChildHtml('', true) }}
    </div>

    <script type="text/javascript">
        (function ($) {
            head.js("{{ viewFileUrl('jquery/jquery.validate.js') }}",
                "{{ viewFileUrl('jquery/jquery.metadata.js') }}",
                "{{ viewFileUrl('mage/validation.js') }}",
                "{{ viewFileUrl('mage/validation/validation.js') }}",
                "{{ viewFileUrl('Mage_Catalog::js/msrp.js') }}", function () {
                    $('#product_addtocart_form').addToCart({
                        cartButtonId: "#product-updatecart-button",
                        cartForm: "#product_addtocart_form"
                    }).validation();
                });
        })(jQuery);
    </script>
{% endif %}


