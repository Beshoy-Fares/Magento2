<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-customer-accounts-link">
                <arguments>
                    <argument name="path" xsi:type="string">customerhierarchy/account/index</argument>
                    <argument name="label" xsi:type="string">Customer Accounts</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-customer-account-roles-link">
                <arguments>
                    <argument name="path" xsi:type="string">customerhierarchy/role/index</argument>
                    <argument name="label" xsi:type="string">Customer Account Roles</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
