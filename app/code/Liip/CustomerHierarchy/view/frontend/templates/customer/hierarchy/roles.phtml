<?php
/**
 * @var $block \Liip\CustomerHierarchy\Block\Customer\Roles
 */
?>
<?php $roles = $block->getRoles(); ?>
<?php echo $block->getChildHtml('info');?>
<?php if ($roles && count($roles)): ?>
    <div class="table-wrapper customer-roles">
        <table class="data table table-customer-roles" id="my-roles-table">
            <caption class="table-caption"><?php /* @escapeNotVerified */ echo __('Roles') ?></caption>
            <thead>
                <tr>
                    <th scope="col" class="col email"><?php echo __('Name'); ?></th>
                    <?php /* @noEscape */ echo $block->getChildHtml('extra.column.header');?>
                    <th scope="col" class="col created-at"><?php echo __('Created At'); ?></th>
                    <th scope="col" class="col actions"><?php echo __('Action'); ?></th>
                </tr>
            </thead>
            <tbody>
                <?php foreach ($roles as $role): ?>
                    <tr>
                        <td data-th="<?php echo $block->escapeHtml(__('Name')) ?>" class="col date"><?php echo $role->getName(); ?></td>
                        <?php $extra = $block->getChildBlock('extra.container'); ?>
                        <?php if ($extra): ?>
                            <?php $extra->setRole($role); ?>
                            <?php /* @noEscape */ echo $extra->getChildHtml() ?>
                        <?php endif; ?>
                        <td data-th="<?php echo $block->escapeHtml(__('Created At')) ?>" class="col date"><?php echo $block->formatDate($role->getCreatedAt()); ?></td>
                        <td data-th="<?php echo $block->escapeHtml(__('Actions')) ?>" class="col actions">
                            <a href="<?php echo $block->getViewUrl($role); ?>" class="action view">
                                <span><?php echo __('View'); ?></span>
                            </a>
                            <a href="<?php echo $block->getEditUrl($role); ?>" class="action edit">
                                <span><?php echo __('Edit'); ?></span>
                            </a>
                            <a href="<?php echo $block->getDisableUrl($role); ?>" class="action disable">
                                <span><?php echo __('Disable'); ?></span>
                            </a>
                            <a href="<?php echo $block->getDeleteUrl($role); ?>" class="action delete">
                                <span><?php echo __('Delete'); ?></span>
                            </a>
                        </td>
                    </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
    </div>
    <?php if ($block->getPagerHtml()): ?>
        <div class="customer-roles-toolbar toolbar bottom"><?php echo $block->getPagerHtml(); ?></div>
    <?php endif ?>
<?php else: ?>
    <div class="message info empty"><span><?php echo __('You have no roles yet.'); ?></span></div>
<?php endif ?>
