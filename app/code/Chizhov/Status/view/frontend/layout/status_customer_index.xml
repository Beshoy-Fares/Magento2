<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Edit Account Status</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="chizhov_status_customer_index"
                   template="Chizhov_Status::customer/form.phtml"
                   cacheable="false">
                <arguments>
                    <argument name="view_model" xsi:type="object">Chizhov\Status\ViewModel\Customer\Status</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
