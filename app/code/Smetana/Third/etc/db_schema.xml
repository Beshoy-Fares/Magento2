<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="smetana_partner" resource="default" engine="innodb" comment="Smetana Partner">
        <column xsi:type="int" name="partner_id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="product_id" comment="Product ID"/>
        <column xsi:type="varchar" name="partner_name" comment="Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="partner_id"/>
        </constraint>
    </table>
</schema>
