<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAddExtraCommentActionGroup">
        <annotations>
            <description>Goes to the Storefront. Clicks on 'Create Account'. Fills in the provided Customer details, than goes to backend and create product and add extra ability to customer and than adds an extra comment.</description>
        </annotations>
        <arguments>
            <argument name="ExtraComment" defaultValue="ExtraCommentEntity"/>
            <argument name="comment" type="string" defaultValue="{{ExtraCommentEntity.comment}}"/>
        </arguments>

        <click stepKey="clickOnExtraCommentsTab" selector="{{StoreFrontExtraCommentsSection.commentsTab}}"/>
        <waitForPageLoad stepKey="waitForPageLoad1"/>
        <fillField  stepKey="fillExtraComment" userInput="{{comment}}" selector="{{StoreFrontExtraCommentsSection.commentField}}"/>
        <click stepKey="clickSendExtraCommentButton" selector="{{StoreFrontExtraCommentsSection.submitComment}}"/>
        <waitForPageLoad stepKey="waitForPageLoad2"/>
    </actionGroup>
</actionGroups>
