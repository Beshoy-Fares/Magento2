/** @var \Magento\Vault\Block\Customer\CreditCards $block */
$tokens = $block->getPaymentTokens();
?>
<?php if (count($tokens) !== 0): ?>
    <div class="table-wrapper my-credit-cards">
        <table class="data table table-credit-cards" id="my-orders-table">
            <caption class="table-caption"><?php echo /* @noEscape */ __('Stored Payment Methods') ?></caption>
            <thead>
            <tr>
                <th scope="col" class="col card-number"><?php echo /* @noEscape */ __('Card Number') ?></th>
                <th scope="col" class="col expire"><?php echo /* @noEscape */ __('Expiration Date') ?></th>
                <th scope="col" class="col card-type"><?php echo /* @noEscape */ __('Type') ?></th>
                <th scope="col" class="col actions">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <?php
            foreach ($tokens as $token) {
                echo $block->renderTokenHtml($token);
            }
            ?>
            </tbody>
        </table>
    </div>

<?php elseif (!$block->isExistsCustomerTokens()): ?>
    <div class="message info empty"><span><?php echo /* @noEscape */ __('You have no stored payment methods.') ?></span></div>
<?php endif ?>
