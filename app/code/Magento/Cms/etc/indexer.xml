<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Indexer/etc/indexer.xsd">
    <indexer id="cms_page_grid" view_id="cms_page_grid" primary="cms_page" class="Magento\Indexer\Model\Action\Base">
        <title translate="true">CMS Page Grid</title>
        <description translate="true">Rebuild CMS Page Grid index</description>

        <fieldset name="cms_page" source="Magento\Cms\Model\Resource\Page">
            <field name="title" dataType="varchar" xsi:type="searchable"/>
            <field name="meta_keywords" dataType="text" xsi:type="searchable"/>
            <field name="meta_description" dataType="text" xsi:type="searchable"/>
            <field name="identifier" dataType="varchar" xsi:type="filterable"/>
            <field name="content_heading" dataType="varchar" xsi:type="searchable"/>
            <field name="content" dataType="mediumtext" xsi:type="searchable"/>
        </fieldset>

        <saveHandler class="Magento\Indexer\Model\SaveHandler" />
        <structure class="Magento\Indexer\Model\Structure" />
    </indexer>
</config>
