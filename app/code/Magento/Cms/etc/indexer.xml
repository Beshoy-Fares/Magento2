<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Indexer/etc/indexer.xsd">
    <indexer id="cms_page_grid" view_id="cms_page_grid" primary="cms_page" class="Magento\Indexer\Model\Action\Base">
        <title translate="true">CMS Page Grid</title>
        <description translate="true">Rebuild CMS Page Grid index</description>

        <fieldset name="cms_page" source="Magento\Cms\Model\Resource\Page">
            <field name="title" />
            <field name="meta_keywords" />
            <field name="meta_description" />
            <field name="meta_identifier" />
            <field name="content_heading" />
            <field name="content" />
        </fieldset>
        <fieldset name="cms_page_store" source="Magento\Cms\Model\Resource\Page">
            <reference from="page_id" to="page_id" />
        </fieldset>
    </indexer>
</config>
