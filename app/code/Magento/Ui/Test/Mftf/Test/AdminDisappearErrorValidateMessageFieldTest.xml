<!-- Test XML Example -->
<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminDisappearErrorValidateMessageFieldTest">
        <annotations>
            <features value="Ui component"/>
            <stories value="Error message"/>
            <title value="Assert disappear error message."/>
            <description value="Verify disappear error message when disabled field."/>
            <testCaseId value="MC-30152"/>
            <severity value="MAJOR"/>
            <group value="ui"/>
        </annotations>

        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="GoToSpecifiedCreateProductPageActionGroup" stepKey="createBundleProduct">
            <argument name="productType" value="bundle"/>
        </actionGroup>

        <actionGroup ref="AssertAdminErrorMessageDisappearDisabledFieldActionGroup" stepKey="checkErrorDisappear">
            <argument name="selectorSwitch" value="{{AdminProductFormBundleSection.dynamicPriceToggle}}"/>
            <argument name="selectorField" value="{{AdminProductFormBundleSection.priceField}}"/>
            <argument name="userInput" value="test"/>
            <argument name="fieldIndex" value="price"/>
        </actionGroup>
    </test>
</tests>
