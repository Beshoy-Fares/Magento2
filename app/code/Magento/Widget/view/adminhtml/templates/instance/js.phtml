<script>
require([
    'jquery',
    'mage/template',
], function($, mageTemplate){

setSettings = function(urlTemplate, codeElement, themeElement) {
    var url;

    if (!$('#edit_form').valid()) {
        return false;
    }

    codeElement = $('#' + codeElement).val();
    themeElement = $('#' + themeElement).val();

    url = mageTemplate(urlTemplate, {
        data: {
            'code': codeElement,
            'theme_id': themeElement
        }
    });

    setLocation(url);
};
});
</script>
