<?php if ($_item = $block->getItem()): ?>
    <div class="product-title"><?php echo /* @escapeNotVerified */ $_item->getName() ?></div>
    <div><strong><?php echo /* @escapeNotVerified */ __('SKU') ?>:</strong> <?php echo implode('<br />', $this->helper('Magento\Catalog\Helper\Data')->splitSku($block->escapeHtml($block->getSku()))) ?></div>
    <?php if ($block->getOrderOptions()): ?>
        <dl class="item-options">
        <?php foreach ($block->getOrderOptions() as $_option): ?>
            <dt><?php echo $block->escapeHtml($_option['label']) ?></dt>
            <dd>
            <?php if (isset($_option['custom_view']) && $_option['custom_view']): ?>
                <?php echo /* @escapeNotVerified */ $_option['value'] ?>
            <?php else: ?>
                <?php echo $block->truncateString($_option['value'], 55, '', $_remainder) ?>
                <?php if ($_remainder):?>
                    ... <span id="<?php echo /* @escapeNotVerified */ $_id = 'id' . uniqid() ?>"><?php echo /* @escapeNotVerified */ $_remainder ?></span>
                    <script>
require(['prototype'], function(){

    $('<?php echo /* @escapeNotVerified */ $_id ?>').hide();
    $('<?php echo /* @escapeNotVerified */ $_id ?>').up().observe('mouseover', function(){$('<?php echo /* @escapeNotVerified */ $_id ?>').show();});
    $('<?php echo /* @escapeNotVerified */ $_id ?>').up().observe('mouseout',  function(){$('<?php echo /* @escapeNotVerified */ $_id ?>').hide();});

});
</script>
                <?php endif;?>
            <?php endif;?>
            </dd>
        <?php endforeach; ?>
        </dl>
    <?php endif; ?>
    <?php if ($block->getLinks()): ?>
        <dl class="item-options">
            <dt><?php echo $block->escapeHtml($block->getLinksTitle()) ?></dt>
            <?php foreach ($block->getLinks()->getPurchasedItems() as $_link): ?>
                <dd><?php echo $block->escapeHtml($_link->getLinkTitle()) ?> (<?php echo /* @escapeNotVerified */ $_link->getNumberOfDownloadsBought() ? $_link->getNumberOfDownloadsBought() : __('Unlimited') ?>)</dd>
            <?php endforeach; ?>
        </dl>
    <?php endif; ?>
    <?php echo $block->escapeHtml($_item->getDescription()) ?>
