/** @var \Magento\GoogleAdwords\Block\Code $block */
/** @var \Magento\Framework\Escaper $escaper */
/** @var \Magento\GoogleAdwords\Helper\Data $helper */
$helper = $block->getHelper();
?>

<?php if ($helper->isGoogleAdwordsConfigurable() && $helper->isGoogleAdwordsActive()) : ?>
    <?php $conversionId = $this->escapeHtml($helper->getConversionId()); ?>
    <?php $gtagSiteSrc = $this->escapeHtml($helper->getConversionGtagGlobalSiteTagSrc()); ?>
    <script>
        if (!!window.gtag) {
          // Inject Global Site Tag
          var gtagScript = document.createElement('script');
          gtagScript.type = 'text/javascript';
          gtagScript.async = true;
          gtagScript.src = '<?= $gtagSiteSrc ?>';
          document.head.appendChild(gtagScript);
          
          window.dataLayer = window.dataLayer || [];

          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('set', 'developer_id.dYjhlMD', true);
        } else {
          gtag('config', '<?= $conversionId ?>');
        }
      </script>
<?php endif ?>
