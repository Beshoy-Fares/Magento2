<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminProductAttributeWithOptionsDontAllowHtmlTagsTest">
        <annotations>
            <features value="Catalog"/>
            <stories value="Product Attribute options must not contain HTML tags"/>
            <title value="Product Attribute options musts not contain HTML tags"/>
            <description value="Test whenever HTML tags are allowed for a product attribute options"/>
            <severity value="MINOR"/>
            <group value="catalog"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logoutAdmin"/>
        </after>
        <actionGroup ref="AdminNavigateToNewProductAttributePageActionGroup" stepKey="openProductAttributePage"/>
        <actionGroup ref="AdminFillProductAttributePropertiesActionGroup" stepKey="fillAttributeDefaultLabel">
            <argument name="attributeName" value="attribute with options"/>
            <argument name="attributeType" value="Dropdown" />
        </actionGroup>
        <actionGroup ref="AdminProductAttributeInputTypeSelectAddNewOptionActionGroup" stepKey="addNewOption"/>
        <actionGroup ref="AdminProductAttributeInputTypeSelectSetOptionValueActionGroup" stepKey="setFirstOptionAdminValueWithHtmlTags">
            <argument name="optionNthColumn" value="1"/>
            <argument name="optionValue" value="option 1 admin &lt;strong&gt; value"/>
        </actionGroup>
        <actionGroup ref="AdminSaveProductAttributeActionGroup" stepKey="saveAttribute1"/>
        <actionGroup ref="AdminAssertSeeProductAttributePageErrorMessageActionGroup" stepKey="seeHtmlTagsAreNotAllowedErrorMessage">
            <argument name="message" value="HTML tags are not allowed for the attribute options."/>
        </actionGroup>
        <actionGroup ref="AdminProductAttributeInputTypeSelectSetOptionValueActionGroup" stepKey="setFirstOptionAdminValueWithoutHtmlTags">
            <argument name="optionNthColumn" value="1"/>
            <argument name="optionValue" value="option 1 admin value"/>
        </actionGroup>
        <actionGroup ref="AdminProductAttributeInputTypeSelectSetOptionValueActionGroup" stepKey="setFirstOptionDefaultStoreValueWithHtmlTags">
            <argument name="optionNthColumn" value="2"/>
            <argument name="optionValue" value="option default &lt;/strong&gt; value"/>
        </actionGroup>
        <actionGroup ref="AdminSaveProductAttributeActionGroup" stepKey="saveAttribute3"/>
        <actionGroup ref="AdminAssertSeeProductAttributePageErrorMessageActionGroup" stepKey="seeHtmlTagsAreNotAllowedErrorMessage2">
            <argument name="message" value="HTML tags are not allowed for the attribute options."/>
        </actionGroup>
        <actionGroup ref="AdminAssertSeeProductAttributePageErrorMessageActionGroup" stepKey="seeHtmlTagsAreNotAllowedErrorMessage3">
            <argument name="message" value="option default &lt;/strong&gt; value"/>
        </actionGroup>
        <actionGroup ref="AdminAssertDontSeeProductAttributePageErrorMessageActionGroup" stepKey="dontSeeHtmlTagsAreNotAllowedErrorMessage">
            <argument name="message" value="option 1 admin &lt;strong&gt; value"/>
        </actionGroup>
    </test>
</tests>