<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCategoryFilterProductBySkuActionGroup">
        <annotations>
            <description>Filter product grid by sku on Category page</description>
        </annotations>
        <arguments>
            <argument name="sku" type="string"/>
        </arguments>

        <click selector="{{AdminCategoryProductsGridFilterSection.resetFilter}}" stepKey="clickOnResetFilter"/>
        <waitForLoadingMaskToDisappear stepKey="waitForReset"/>
        <fillField selector="{{AdminCategoryProductsGridFilterSection.skuFilter}}" userInput="{{sku}}" stepKey="fillSkuFilter"/>
        <click selector="{{AdminCategoryProductsGridFilterSection.search}}" stepKey="clickSearchButton"/>
        <waitForLoadingMaskToDisappear stepKey="waitForApply"/>
    </actionGroup>
</actionGroups>
