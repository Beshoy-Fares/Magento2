<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAttributeUsedForSortingInProductListingActionGroup">
        <annotations>
            <description>Set `Used for Sorting in Product Listing` on attribute page.</description>
        </annotations>
        <arguments>
            <argument name="value" type="string"/>
        </arguments>

        <click selector="{{StorefrontPropertiesSection.StoreFrontPropertiesTab}}" stepKey="clickStorefrontPropertiesTab"/>
        <waitForElementVisible selector="{{AdvancedAttributePropertiesSection.UsedForSortBy}}" stepKey="waitForTabSwitch"/>
        <selectOption selector="{{AdvancedAttributePropertiesSection.UsedForSortBy}}" userInput="{{value}}" stepKey="UsedForSortBy"/>
    </actionGroup>
</actionGroups>
