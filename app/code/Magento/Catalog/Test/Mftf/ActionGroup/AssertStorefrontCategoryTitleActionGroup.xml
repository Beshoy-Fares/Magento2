<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertStorefrontCategoryTitleActionGroup">
        <annotations>
            <description>Validate that the right Category Title is shown</description>
        </annotations>
        <arguments>
            <argument name="categoryTitle" type="string"/>
        </arguments>

        <seeElement selector="{{StorefrontCategoryMainSection.CategoryTitle(categoryTitle)}}" stepKey="seeCategoryInTitle"/>
    </actionGroup>
</actionGroups>
