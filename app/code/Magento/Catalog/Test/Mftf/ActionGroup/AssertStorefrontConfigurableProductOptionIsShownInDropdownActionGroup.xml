<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertStorefrontConfigurableProductOptionIsShownInDropdownActionGroup">
        <annotations>
            <description>Verify that the Child product is shown in drop-down field on frontend</description>
        </annotations>
        <arguments>
            <argument name="optionName" type="string"/>
            <argument name="optionLabel" type="string"/>
        </arguments>
        <see selector="{{StorefrontProductInfoMainSection.productOptionSelect(optionName)}}"
             userInput="{{optionLabel}}" stepKey="seeOptionInDropdown"/>
    </actionGroup>
</actionGroups>
