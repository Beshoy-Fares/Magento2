<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductAttributeInputTypeSelectAddNewOptionActionGroup">
        <annotations>
            <description>Adds new option for the attributes that has "Catalog Input Type for Store Owner" set to Dropdown or Multiple Select</description>
        </annotations>

        <click selector="{{AdminProductFormNewAttributeSection.addValue}}" stepKey="addNewDropdownOption"/>
    </actionGroup>
</actionGroups>