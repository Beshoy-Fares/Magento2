<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontSelectProductOptionValueActionGroup">
        <annotations>
            <description>Selects Option value</description>
        </annotations>
        <arguments>
            <argument name="optionValue"/>
        </arguments>
        
        <selectOption selector="{{StorefrontProductInfoMainSection.productAttributeOptionsSelectButton}}" userInput="{{optionValue}}" stepKey="selectOptionValue"/>
    </actionGroup>
</actionGroups>
