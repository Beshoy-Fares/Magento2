<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAssertDontSeeProductAttributePageErrorMessageActionGroup">
        <annotations>
            <description>Do not see the error message on the Product Attribute creation/edit page.</description>
        </annotations>
        <arguments>
            <argument name="message" type="string"/>
        </arguments>

        <dontSee userInput="{{message}}" selector="{{AdminMessagesSection.error}}" stepKey="dontSeeErrorMessage"/>
    </actionGroup>
</actionGroups>
