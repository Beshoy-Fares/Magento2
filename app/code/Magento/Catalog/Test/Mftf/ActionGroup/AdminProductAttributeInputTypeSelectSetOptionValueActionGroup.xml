<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductAttributeInputTypeSelectSetOptionValueActionGroup">
        <annotations>
            <description>Set the option value for the product attribute type Dropdown or Multiple Select</description>
        </annotations>
        <arguments>
            <argument name="optionNthColumn" type="string"/>
            <argument name="optionValue" type="string"/>
        </arguments>

        <fillField selector="{{AdminProductFormNewAttributeSection.optionValue(optionNthColumn))}}" userInput="{{optionValue}}" stepKey="setOptionValue"/>
    </actionGroup>
</actionGroups>
