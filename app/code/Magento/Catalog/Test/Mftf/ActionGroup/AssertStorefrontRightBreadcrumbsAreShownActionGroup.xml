<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertStorefrontRightBreadcrumbsAreShownActionGroup">
        <annotations>
            <description>Validate that the right Category name is shown in Breadcrumbs</description>
        </annotations>
        <arguments>
            <argument name="categoryName" type="string"/>
        </arguments>

        <see selector="{{StorefrontNavigationSection.categoryBreadcrumbs}}" userInput="{{categoryName}}" stepKey="seeCategoryInBreadcrumbs"/>
    </actionGroup>
</actionGroups>
