<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertStorefrontCategoryTitleOnCategoryPageActionGroup">
        <arguments>
            <argument name="categoryTitle" type="string"/>
        </arguments>

        <see selector="{{StorefrontCategoryMainSection.CategoryTitle}}" userInput="{{categoryTitle}}" stepKey="assertCategoryOnStorefront"/>
        <seeInTitle userInput="{{categoryTitle}}" stepKey="seeCategoryNameInTitle"/>
    </actionGroup>
</actionGroups>
