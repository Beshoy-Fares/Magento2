<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
  <test name="AdminLoginToYotpo">
    <annotations>
      <features value="Backend"/>
      <stories value="Yotpo"/>
      <title value="Admin should be able to log into Yotpo"/>
      <description value="Admin should be able to log into the Yotpo backend page"/>
      <severity value="CRITICAL"/>
      <testCaseId value="MAGETWO-909090"/>
      <group value="Yotpo"/>
      <group value="Admin"/>
    </annotations>

    <before>
      <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
    </before>
    <after>
      <actionGroup ref="logout" stepKey="logout"/>
    </after>
    <actionGroup ref="AdminNavigateMenuActionGroup" stepKey="navigateToStoresAllStoresPage">
      <argument name="menuUiId" value="{{AdminMenuStores.dataUiId}}"/>
      <argument name="submenuUiId" value="{{AdminMenuStoresSettingsConfiguration.dataUiId}}"/>
    </actionGroup>
    <scrollTo selector="{{AdminCustomerMenuSection.MiddleOfThePage}}" stepKey="scrollToYotpoIcon"/>
    <seeElementInDOM selector="{{AdminCustomerMenuSection.YotpoIconInMenu}}" stepKey="checkYotpoAppearsInTheMenu"/>
  </test>
</tests>
