?>
<?php $_id = 'id_' . md5(microtime()) ?>
<?php $formId = $block->getFormId()?>
<?php if (!empty($formId)) :?>
<script>
    require([
        'prototype',
        'mage/adminhtml/grid'
    ], function(){
        Event.observe(window, "load", function(){
            var serializeInput  = document.createElement('input');
            serializeInput.type = 'hidden';
            serializeInput.name = '<?php echo /* @escapeNotVerified */ $block->getInputElementName() ?>';
            serializeInput.id   = '<?php echo /* @escapeNotVerified */ $_id ?>';
            try {
                document.getElementById('<?php echo /* @escapeNotVerified */ $formId ?>').appendChild(serializeInput);
                new serializerController('<?php echo /* @escapeNotVerified */ $_id ?>', <?php echo /* @escapeNotVerified */ $block->getDataAsJSON() ?>, <?php echo /* @escapeNotVerified */ $block->getColumnInputNames(true) ?>, <?php echo /* @escapeNotVerified */ $block->getGridBlock()->getJsObjectName() ?>, '<?php echo /* @escapeNotVerified */ $block->getReloadParamName() ?>');
            } catch(e) {
                //Error add serializer
            }
        });
    });
</script>
<?php else :?>
<input type="hidden" name="<?php echo /* @escapeNotVerified */ $block->getInputElementName() ?>"  value="" id="<?php echo /* @escapeNotVerified */ $_id ?>" />
<script>
    require([
        'mage/adminhtml/grid'
    ], function(){
        new serializerController('<?php echo /* @escapeNotVerified */ $_id ?>', <?php echo /* @escapeNotVerified */ $block->getDataAsJSON() ?>, <?php echo /* @escapeNotVerified */ $block->getColumnInputNames(true) ?>, <?php echo /* @escapeNotVerified */ $block->getGridBlock()->getJsObjectName() ?>, '<?php echo /* @escapeNotVerified */ $block->getReloadParamName() ?>');
    });
</script>
<?php endif;?>
