/** @var $block \Magento\ProductAlert\Block\Email\Price */
?>
<?php if ($_products = $block->getProducts()): ?>
<p><?php echo /* @escapeNotVerified */  __('Price change alert! We wanted you to know that prices have changed for these products:') ?></p>
<table>
<?php /** @var $_product \Magento\Catalog\Model\Product */ ?>
<?php foreach ($_products as $_product): ?>
    <tr>
        <td class="col photo">
            <a href="<?php echo /* @escapeNotVerified */  $_product->getProductUrl() ?>" title="<?php echo $block->escapeHtml($_product->getName()) ?>" class="product photo">
                <?php echo $block->getImage($_product, 'product_thumbnail_image', ['class' => 'photo image'])->toHtml() ?>
            </a>
        </td>
        <td class="col item">
            <p>
                <strong class="product name">
                    <a href="<?php echo /* @escapeNotVerified */  $_product->getProductUrl() ?>"><?php echo $block->escapeHtml($_product->getName()) ?></a>
                </strong>
            </p>
            <?php if ($shortDescription = $block->getFilteredContent($_product->getShortDescription())): ?>
                <p><small><?php echo /* @escapeNotVerified */  $shortDescription ?></small></p>
            <?php endif; ?>
            <?php echo $block->getProductPriceHtml(
                    $_product,
                    \Magento\Catalog\Pricing\Price\FinalPrice::PRICE_CODE,
                    \Magento\Framework\Pricing\Render::ZONE_EMAIL,
                    [
                        'display_label' => __('Price:')
                    ]
                );
                ?>
            <p><small><a href="<?php echo /* @escapeNotVerified */  $block->getProductUnsubscribeUrl($_product->getId()) ?>"><?php echo /* @escapeNotVerified */  __('Click here to stop alerts for this product.') ?></a></small></p>
        </td>
    </tr>
<?php endforeach; ?>
</table>
<p><a href="<?php echo /* @escapeNotVerified */  $block->getUnsubscribeUrl() ?>"><?php echo /* @escapeNotVerified */  __('Unsubscribe from all price alerts') ?></a></p>
<?php endif; ?>
