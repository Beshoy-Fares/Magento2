<script>
    require([
        'jquery',
        'domReady'
    ], function ($, domReady) {
        domReady(function() {
                var regionId = $('#region_id'),
                    setRegion = function() {
                    $('#region').val(regionId.filter(':visible').find(':selected').text());
                };

                if (regionId.is('visible')) {
                    setRegion();
                }

                regionId.on('change', setRegion);
                $('#country_id').on('change', setRegion);
            }
        )
    })
</script>
