                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
        //-->
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="adminhtml_cron_columns" class="Magento\Ui\Component\Listing\Columns">
