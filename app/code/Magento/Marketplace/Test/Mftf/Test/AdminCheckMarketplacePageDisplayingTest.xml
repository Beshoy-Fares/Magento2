<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminCheckMarketplacePageDisplayingTest">
        <annotations>
            <stories value="Magento Marketplace displaying."/>
            <title value="Admin should see Magento Marketplace page."/>
            <description value="Admin should see Magento Marketplace page."/>
            <severity value="MINOR"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginToAdminPanel"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="AdminOpenMarketplacePageActionGroup" stepKey="openMarketplacePage"/>
        <actionGroup ref="AssertAdminPageIsNot404ActionGroup" stepKey="verifyPageIsNot404"/>
    </test>
</tests>
