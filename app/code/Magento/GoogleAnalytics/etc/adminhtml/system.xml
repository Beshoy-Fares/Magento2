<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="google" translate="label" type="text" sortOrder="340" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Google API</label>
            <tab>sales</tab>
            <resource>Magento_GoogleAnalytics::google</resource>
            <group id="analytics" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Google Analytics</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="account_type" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Property Type</label>
                    <source_model>Magento\GoogleAnalytics\Model\Config\Source\AccountType</source_model>
                    <depends>
                        <field id="*/*/active">1</field>
                    </depends>
                </field>
                <field id="tracking_id" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Tracking ID</label>
                    <comment>Universal Analytics (ex. UA-XXXXXXXX)</comment>
                    <!-- <backend_model>Magento\GoogleAnalytics\Model\Config\Backend\TrackingId</backend_model> -->
                    <validate>required-entry</validate>
                    <depends>
                        <field id="*/*/active">1</field>
                        <field id="*/*/account_type">0</field>
                    </depends>
                </field>
                <field id="measurement_id" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Measurement ID</label>
                    <comment>Google Analytics (ex. G-XXXXXXXX)</comment>
                    <!-- <backend_model>Magento\GoogleAnalytics\Model\Config\Backend\MeasurementId</backend_model> -->
                    <validate>required-entry</validate>
                    <depends>
                        <field id="*/*/active">1</field>
                        <field id="*/*/account_type">1</field>
                    </depends>
                </field>
                <field id="anonymize" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Anonymize IP</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <depends>
                        <field id="*/*/active">1</field>
                        <field id="*/*/account_type">0</field>
                    </depends>
                </field>
                <field id="anonymize_default_yes" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Anonymize IP</label>
                    <source_model>Magento\GoogleAnalytics\Model\Config\Source\DefaultYes</source_model>
                    <depends>
                        <field id="*/*/active">1</field>
                        <field id="*/*/account_type">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>