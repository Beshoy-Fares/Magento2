<?php
/**
 * @var $block \Magento\CatalogSearch\Block\Advanced\Result
 */
?>
<?php if ($results = $block->getResultCount()): ?>
    <div class="search found">
        <?php if ($results == 1) : ?>
            <?php echo /* @escapeNotVerified */ __('<strong>%1 item</strong> were found using the following search criteria', $results) ?>
        <?php else: ?>
            <?php echo /* @escapeNotVerified */ __('<strong>%1 items</strong> were found using the following search criteria', $results) ?>
        <?php endif; ?>
    </div>
<?php else: ?>
    <div role="alert" class="message error">
        <div>
            <?php echo /* @escapeNotVerified */ __('We can\'t find any items matching these search criteria.') ?> <a href="<?php echo /* @escapeNotVerified */ $block->getFormUrl() ?>"><?php echo /* @escapeNotVerified */ __('Modify your search.') ?></a>
        </div>
    </div>
<?php endif; ?>

<?php $searchCriterias = $block->getSearchCriterias(); ?>
<div class="search summary">
    <?php foreach (['left', 'right'] as $side): ?>
        <?php if (@$searchCriterias[$side]): ?>
            <ul class="items">
                <?php foreach ($searchCriterias[$side] as $criteria): ?>
                    <li class="item"><strong><?php echo $block->escapeHtml(__($criteria['name'])) ?>:</strong> <?php echo $block->escapeHtml($criteria['value']) ?></li>
                <?php endforeach; ?>
            </ul>
        <?php endif; ?>
    <?php endforeach; ?>
</div>
<?php if ($block->getResultCount()): ?>
    <div class="message notice">
        <div>
            <?php echo /* @escapeNotVerified */ __("Don't see what you're looking for?") ?>
            <a href="<?php echo /* @escapeNotVerified */ $block->getFormUrl() ?>"><?php echo /* @escapeNotVerified */ __('Modify your search.') ?></a>
        </div>
    </div>
<?php endif; ?>
<?php if ($block->getResultCount()): ?>
    <div class="search results"><?php echo $block->getProductListHtml() ?></div>
<?php endif; ?>
<?php $block->getSearchCriterias(); ?>
