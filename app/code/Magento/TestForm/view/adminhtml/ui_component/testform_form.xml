    <fieldset name="koala">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Koala</item>
            </item>
        </argument>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Name</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">koala</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="updateme">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">update me</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">koala</item>
                    <item name="visible" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>

        <container name="robinGood_gridsrc">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/form/components/robinGood</item>
                    <item name="dataScope" xsi:type="string">position_gridsrc</item>
                    <item name="template" xsi:type="string">Magento_TestForm/koala/base</item>
                    <item name="externalProvider" xsi:type="string">testform_form.areas.koala.koala.wood_listing.wood_columns.positionFromGridSource</item>
                </item>
            </argument>
        </container>

        <container name="robinGood_formsrc">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/form/components/robinGood</item>
                    <item name="dataScope" xsi:type="string">position_formsrc</item>
                    <item name="template" xsi:type="string">Magento_TestForm/koala/base</item>
                    <item name="externalProvider" xsi:type="string">testform_form.areas.koala.koala.wood_listing.wood_columns.positionFromFormSource</item>
                </item>
            </argument>
        </container>
        <!--<container name="gridWrapper">
