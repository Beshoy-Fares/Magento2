        <listing name="wood_listing">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="provider" xsi:type="string">testform_form.listing_data_source</item>
                    <item name="deps" xsi:type="string">testform_form.listing_data_source</item>
                </item>
            </argument>

            <columns name="wood_columns">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="provider" xsi:type="string">testform_form.listing_data_source</item>
                        <item name="deps" xsi:type="string">testform_form.listing_data_source</item>
                    </item>
                </argument>
                <selectionsColumn name="ids">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="indexField" xsi:type="string">koala_id</item>
                            <item name="provider" xsi:type="string">testform_form.listing_data_source</item>
                            <item name="deps" xsi:type="string">testform_form.listing_data_source</item>
                        </item>
                    </argument>
                </selectionsColumn>
                <column name="koala_id">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="label" xsi:type="string" translate="true">ID</item>
                            <item name="provider" xsi:type="string">testform_form.listing_data_source</item>
                            <item name="deps" xsi:type="string">testform_form.listing_data_source</item>
                        </item>
                    </argument>
                </column>
                <column name="name">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="sorting" xsi:type="string">asc</item>
                            <item name="label" xsi:type="string" translate="true">Title</item>
                            <item name="provider" xsi:type="string">testform_form.listing_data_source</item>
                            <item name="deps" xsi:type="string">testform_form.listing_data_source</item>
                        </item>
                    </argument>
                </column>
                <column name="positionFromGridSource">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="label" xsi:type="string" translate="true">Position - grid source</item>
                            <item name="component" xsi:type="string" translate="true">Magento_Ui/js/grid/columns/columnLittleJohn</item>
                            <item name="provider" xsi:type="string">testform_form.listing_data_source</item>
                            <item name="deps" xsi:type="string">testform_form.listing_data_source</item>
                        </item>
                    </argument>
                </column>
                <column name="positionFromFormSource">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="label" xsi:type="string" translate="true">Position - form source</item>
                            <item name="component" xsi:type="string" translate="true">Magento_Ui/js/grid/columns/columnLittleJohn</item>
                            <item name="rowsProvider" xsi:type="string">testform_form.listing_data_source</item>
                        </item>
                    </argument>
                </column>
            </columns>
        </listing>
    </fieldset>
