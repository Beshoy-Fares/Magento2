<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminEnhancedMediaGallerySearchByMultipleKeywordsTest">
        <annotations>
            <features value="MediaGallery"/>
            <useCaseId value="https://github.com/magento/adobe-stock-integration/issues/1392"/>
            <title value="User filter images by their keywords in Standalone Media Gallery"/>
            <stories value="User filter images by their keywords in Standalone Media Gallery"/>
            <testCaseId value="https://studio.cucumber.io/projects/131313/test-plan/folders/1337102/scenarios/4503803"/>
            <description value="User checks search by multiple keywords returns related images"/>
            <severity value="CRITICAL"/>
            <group value="media_gallery_ui"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminOpenStandaloneMediaGalleryActionGroup" stepKey="openMediaGallery"/>
        </before>
        <after>
            <actionGroup ref="AdminAdobeStockMediaGalleryClearFiltersActionGroup" stepKey="clearFilters"/>
            <actionGroup ref="ResetAdminDataGridToDefaultViewActionGroup" stepKey="resetAllAdminDataGridToDefaultView"/>
        </after>
        <actionGroup ref="AdminEnhancedMediaGalleryUploadImageActionGroup" stepKey="uploadFirstImage">
            <argument name="image" value="ImageUpload3"/>
        </actionGroup>
        <actionGroup ref="AdminAdobeStockMediaGallerySearchByKeywordActionGroup" stepKey="searchFirstImage">
            <argument name="keyword" value="{{ImageMetadata.fileName}}"/>
        </actionGroup>
        <actionGroup ref="AdminAssertImageInStandaloneMediaGalleryActionGroup" stepKey="assertFirstImageIsAvailableInStandaloneGridUsingImageName">
            <argument name="imageName" value="{{ImageMetadata.file}}"/>
        </actionGroup>
        <actionGroup ref="ResetAdminDataGridToDefaultViewActionGroup" stepKey="resetAdminFirstDataGridToDefaultView"/>
        <actionGroup ref="AdminEnhancedMediaGalleryEditImageDetailsActionGroup" stepKey="editFirstImage"/>
        <actionGroup ref="AdminMediaGalleryEditAssetAddKeywordActionGroup" stepKey="setFirstImageKeywords">
            <argument name="keyword" value="UpdatedImageDetails.keyword"/>
        </actionGroup>
        <actionGroup ref="AdminEnhancedMediaGalleryImageDetailsSaveActionGroup" stepKey="saveFirstImage">
            <argument name="image" value="ImageMetadata"/>
        </actionGroup>
        <actionGroup ref="AdminEnhancedMediaGalleryUploadImageActionGroup" stepKey="uploadSecondImage">
            <argument name="image" value="ImageUpload"/>
        </actionGroup>
        <actionGroup ref="AdminAdobeStockMediaGallerySearchByKeywordActionGroup" stepKey="searchSecondImage">
            <argument name="keyword" value="{{SearchImageData.fileName}}"/>
        </actionGroup>
        <actionGroup ref="AdminAssertImageInStandaloneMediaGalleryActionGroup" stepKey="assertSecondImageIsAvailableInStandaloneGridUsingImageName">
            <argument name="imageName" value="{{SearchImageData.file}}"/>
        </actionGroup>
        <actionGroup ref="ResetAdminDataGridToDefaultViewActionGroup" stepKey="resetAdminSecondDataGridToDefaultView"/>
        <actionGroup ref="AdminEnhancedMediaGalleryEditImageDetailsActionGroup" stepKey="editSecondImage"/>
        <actionGroup ref="AdminMediaGalleryEditAssetAddKeywordActionGroup" stepKey="setSecondImageKeywords">
            <argument name="keyword" value="UpdatedImageDetails.second_keyword"/>
        </actionGroup>
        <actionGroup ref="AdminEnhancedMediaGalleryImageDetailsSaveActionGroup" stepKey="saveSecondImage">
            <argument name="image" value="SearchImageData"/>
        </actionGroup>
        <actionGroup ref="AdminAdobeStockMediaGallerySearchByKeywordActionGroup" stepKey="searchImageByKeyword">
            <argument name="keyword" value="{{SearchImageData.searchKeywords}}"/>
        </actionGroup>
<!--        <actionGroup ref="AdminAssertImageInStandaloneMediaGalleryActionGroup" stepKey="assertFirstImageIsAvailableInStandaloneGridUsingKeyword">-->
<!--            <argument name="imageName" value="{{ImageMetadata.file}}"/>-->
<!--        </actionGroup>-->
<!--        <actionGroup ref="AdminAssertImageInStandaloneMediaGalleryActionGroup" stepKey="assertSecondImageIsAvailableInStandaloneGridUsingKeyword">-->
<!--            <argument name="imageName" value="{{SearchImageData.file}}"/>-->
<!--        </actionGroup>-->
        <actionGroup ref="AdminEnhancedMediaGalleryImageDeleteActionGroup" stepKey="deleteFirstImage"/>
        <actionGroup ref="AdminEnhancedMediaGalleryImageDeleteActionGroup" stepKey="deleteSecondImage"/>
    </test>
</tests>
