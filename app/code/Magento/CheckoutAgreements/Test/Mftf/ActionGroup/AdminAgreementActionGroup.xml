<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="fillMainAgreementForm">
        <arguments>
            <argument name="agreement" defaultValue="_defaultAgreement"/>
        </arguments>
        <fillField selector="{{TermsAndConditionsInformationSection.name}}" userInput="{{agreement.name}}" stepKey="fillAgreementName"/>
        <selectOption selector="{{TermsAndConditionsInformationSection.status}}" userInput="{{agreement.status}}" stepKey="selectStatus"/>
        <selectOption selector="{{TermsAndConditionsInformationSection.showContentAs}}" userInput="{{agreement.showContentAs}}" stepKey="selectShowContentAs" />
        <selectOption selector="{{TermsAndConditionsInformationSection.applied}}" userInput="{{agreement.applied}}" stepKey="selectApplied" />
        <selectOption selector="{{TermsAndConditionsInformationSection.storeView}}" userInput="{{agreement.storeView}}" stepKey="selectAllStoreView" />
        <fillField selector="{{TermsAndConditionsInformationSection.checkboxText}}" userInput="{{agreement.checkboxText}}" stepKey="fillCheckboxText"/>
        <fillField selector="{{TermsAndConditionsInformationSection.content}}" userInput="{{agreement.content}}" stepKey="fillContent"/>
        <selectOption selector="{{TermsAndConditionsInformationSection.formsToUseIn}}" userInput="{{agreement.formsToUseIn}}" stepKey="selectFormsToUseIn" />
    </actionGroup>
    <actionGroup name="saveAgreement">
        <click selector="{{TermsAndConditionsActionSection.saveButton}}" stepKey="clickSave"/>
        <waitForPageLoad stepKey="waitForAgreementGridLoadAfterSave"/>
        <see userInput="You saved the condition." selector="{{AdminMessagesSection.success}}" stepKey="successMessage"/>
    </actionGroup>
    <actionGroup name="deleteAgreement">
        <click selector="{{TermsAndConditionsActionSection.deleteButton}}" stepKey="clickDelete"/>
        <click selector="{{TermsAndConditionsActionSection.deleteConfirm}}" stepKey="clickDeleteConfirm"/>
        <waitForPageLoad stepKey="waitForAgreementGridLoadAfterDelete"/>
        <see userInput="You deleted the condition." selector="{{AdminMessagesSection.success}}" stepKey="successMessage"/>
    </actionGroup>
</actionGroups>
