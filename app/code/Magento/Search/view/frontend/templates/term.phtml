<?php if (sizeof($block->getTerms()) > 0): ?>
    <ul class="search-terms">
        <?php foreach ($block->getTerms() as $_term): ?>
            <li class="item">
                <a href="<?php echo /* @escapeNotVerified */ $block->getSearchUrl($_term) ?>"
                   style="font-size:<?php echo /* @escapeNotVerified */ $_term->getRatio()*70+75 ?>%;">
                    <?php echo $block->escapeHtml($_term->getQueryText()) ?>
                </a>
            </li>
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <div class="message notice">
        <div><?php echo /* @escapeNotVerified */ __('There are no search terms available.') ?></div>
    </div>
<?php endif; ?>
