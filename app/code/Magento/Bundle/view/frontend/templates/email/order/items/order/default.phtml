<?php /** @var $block \Magento\Bundle\Block\Sales\Order\Items\Renderer */ ?>
<?php $_item = $block->getItem() ?>
<?php $_order = $block->getOrder() ?>

<?php $parentItem = $block->getItem() ?>
<?php $items = array_merge([$parentItem], $parentItem->getChildrenItems()); ?>

<?php if ($block->getItemOptions() || $_item->getDescription() || $this->helper('Magento\GiftMessage\Helper\Message')->isMessagesAllowed('order_item', $_item) && $_item->getGiftMessageId()): ?>
    <?php $_showlastRow = true ?>
<?php else: ?>
    <?php $_showlastRow = false ?>
<?php endif; ?>

<?php $_prevOptionId = '' ?>

<?php foreach ($items as $_item): ?>

    <?php if ($_item->getParentItem()): ?>
        <?php $attributes = $block->getSelectionAttributes($_item) ?>
        <?php if ($_prevOptionId != $attributes['option_id']): ?>
            <tr>
                <td class="bundle-item" colspan="3">
                    <strong><em><?= $attributes['option_label'] ?></em></strong>
                </td>
            </tr>
            <?php $_prevOptionId = $attributes['option_id'] ?>
        <?php endif; ?>
    <?php endif; ?>
    <tr id="order-item-row-<?= $_item->getId() ?>">
        <?php if (!$_item->getParentItem()): ?>
            <td class="bundle-item-parent product-info">
                <p class="product-name"><?= $block->escapeHtml($_item->getName()) ?></p>
                <p class="sku"><?= __('SKU'); ?>: <?= $block->escapeHtml($block->getSku($_item)) ?></p>
            </td>
            <td class="bundle-item-parent align-center">
                <?= $_item->getQtyOrdered() * 1 ?>
            </td>
            <td class="bundle-item-parent align-right">
                <?= $block->getItemPrice($_item); ?>
            </td>
        <?php else: ?>
            <td class="bundle-item bundle-details product-info" colspan="3">
                <p><?= $block->getValueHtml($_item)?></p>
            </td>
        <?php endif; ?>
    </tr>
<?php endforeach; ?>

<?php if ($_showlastRow): ?>
<tr>
    <td align="left" valign="top" colspan="3">
        <?php if ($block->getItemOptions()): ?>
        <dl>
            <?php foreach ($block->getItemOptions() as $option): ?>
            <dt><strong><em><?= $option['label'] ?></em></strong></dt>
                        <dd><?= $option['value'] ?></dd>
            <?php endforeach; ?>
        </dl>
        <?php endif; ?>
        <?php $_giftMessage = $this->helper('Magento\GiftMessage\Helper\Message')->getGiftMessage($_item->getGiftMessageId()); ?>
        <?php if ($_giftMessage): ?>
            <table class="message-gift">
                <tr>
                    <td>
                        <strong><?= __('Gift Message') ?></strong>
                        <br /><?= __('From:'); ?> <?php echo $block->escapeHtml($_giftMessage->getSender()) ?>
                        <br /><?= __('To:'); ?> <?php echo $block->escapeHtml($_giftMessage->getRecipient()) ?>
                        <br /><?= __('Message:'); ?><br /> <?php echo $block->escapeHtml($_giftMessage->getMessage()) ?>
                    </td>
                </tr>
            </table>
        <?php endif; ?>
    </td>
</tr>
<?php endif; ?>
