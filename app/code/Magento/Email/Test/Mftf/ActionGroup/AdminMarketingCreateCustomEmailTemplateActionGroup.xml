<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminMarketingCreateCustomEmailTemplateActionGroup">
        <arguments>
            <argument name="templateName" type="string"/>
            <argument name="templateSubject" type="string"/>
            <argument name="templateContent" type="string"/>
        </arguments>

        <fillField selector="{{AdminEmailTemplateEditSection.templateCode}}" userInput="{{templateName}}" stepKey="fillTemplateNameField"/>
        <fillField selector="{{AdminEmailTemplateEditSection.templateSubject}}" userInput="{{templateSubject}}" stepKey="fillTemplateSubjectField"/>
        <fillField selector="{{AdminEmailTemplateEditSection.templateText}}" userInput="{{templateContent}}" stepKey="fillTemplateContentField"/>
        <click selector="{{AdminMainActionsSection.save}}" stepKey="clickSaveTemplateButton"/>
        <waitForPageLoad stepKey="waitForPageLoading"/>
    </actionGroup>
</actionGroups>
