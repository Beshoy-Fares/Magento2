<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertShoppingCartToolbarLimiterIsVisibleInCartActionGroup">
        <arguments>
            <argument name="defaultLimit" type="string"/>
        </arguments>
        <waitForPageLoad stepKey="waitForPageLoad"/>
        <seeNumberOfElements selector="{{StorefrontCartToolbarSection.toolbarLimiter}}" userInput="2" stepKey="seeTwoToolbarsAndLimiters"/>
        <seeNumberOfElements selector="{{StorefrontCartToolbarSection.toolbarLimiterSelect}}" userInput="2" stepKey="seeTwoLimitersSelectField"/>
        <seeOptionIsSelected selector="{{StorefrontCartToolbarSection.toolbarLimiterFirstSelect}}" userInput="20" stepKey="VerifyPageToolbarLimiterValue" />
    </actionGroup>
</actionGroups>
