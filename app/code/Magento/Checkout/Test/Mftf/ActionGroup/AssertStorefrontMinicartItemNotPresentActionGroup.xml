<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertStorefrontMinicartItemNotPresentActionGroup">
        <annotations>
            <description>Validates that the provided product is not present in the mini cart.</description>
        </annotations>
        <arguments>
            <argument name="productName" type="string"/>
        </arguments>
        <dontSee selector="{{StorefrontMinicartSection.productLinkByName(productName)}}" stepKey="verifyAssertProductAbsentInMiniShoppingCart"/>
    </actionGroup>
</actionGroups>
