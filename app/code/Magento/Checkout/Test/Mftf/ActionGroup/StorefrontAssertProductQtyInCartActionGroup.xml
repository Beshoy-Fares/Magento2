<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontAssertProductQtyInCartActionGroup">
        <annotations>
            <description>Asserts product qty in the Cart</description>
        </annotations>
        <arguments>
            <argument name="product" type="entity"/>
            <argument name="productQuantity" type="string"/>
        </arguments>

        <seeInField userInput="{{productQuantity}}" selector="{{CheckoutCartProductSection.ProductQuantityByName(product.name)}}" stepKey="assertProductQuantity"/>
    </actionGroup>
</actionGroups>
