<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="product.tooltip">
                <referenceBlock name="map.shortcut.buttons">
                    <block class="Magento\Paypal\Block\Express\InContext\Button"
                           name="paypal.express-in-context.msrp"
                           template="Magento_Paypal::express/in-context/shortcut/button.phtml">
                        <arguments>
                            <argument name="button_id" xsi:type="string">paypal-express-in-context-msrp</argument>
                            <argument name="add_to_cart_selector" xsi:type="string">button[type="button"].action.tocart.primary</argument>
                        </arguments>
                    </block>
                </referenceBlock>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
